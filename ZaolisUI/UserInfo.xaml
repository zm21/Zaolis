<UserControl x:Class="ZaolisUI.UserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZaolisUI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="496" d:DesignWidth="325" BorderBrush="#FF03A9F4" BorderThickness="0" MinWidth="250">
    <DockPanel Background="Transparent">
        <!--Button close-->
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="3" Grid.RowSpan="3" Background="Gray" Opacity="0.3" MouseLeftButtonUp="Border_MouseLeftButtonUp"></Border>
            <DockPanel Grid.Column="1" Grid.Row="1" Background="White" >
                <DockPanel Margin="10,0,10,0" DockPanel.Dock="Top" LastChildFill="False">
                    <Label Margin="0,0,0,0" FontFamily="Myanmar Text" FontSize="16" FontWeight="Bold" Height="31">User Info</Label>
                    <Button Name="buttonClose" DockPanel.Dock="Right" Height="30" Width="30" Style="{StaticResource MaterialDesignIconButton}" Content="{materialDesign:PackIcon Kind=Close}" Click="buttonClose_Click" ></Button>

                </DockPanel>
                <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
                    <!--Photo&Name-->
                    <DockPanel Margin="10,0,10,0" LastChildFill="False" DockPanel.Dock="Top">
                        <!--Photo-->
                        <Ellipse Height="60" Width="60" Margin="1,5" Stroke="#FF03A9F4" StrokeThickness="1">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding ImagePath}" Stretch="Fill"></ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--Name-->
                        <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                            <TextBlock Margin="10,10,0,0" DockPanel.Dock="Top">
                        <Run Text="{Binding ContactMsgGetter.Name}" FontSize="16"/></TextBlock>
                            <TextBlock Margin="12,5,0,5" DockPanel.Dock="Top"> 
                                <Run Text="Last seen at " FontSize="12" Foreground="#FF727272" ></Run>
                                <Run Text="{Binding ContactMsgGetter.LastActive}"></Run>
                            </TextBlock>
                        </DockPanel>
                    </DockPanel>
                    <!--Just a border-->
                    <Border DockPanel.Dock="Top" Height="10" Margin="0,10" Background="#C8E4F8"></Border>
                    <!--Bio-->
                    <DockPanel Margin="10,5,0,5" DockPanel.Dock="Top">
                        <materialDesign:PackIcon Kind="InfoCircle" ToolTip="Information" DockPanel.Dock="Left" Foreground="#FF03A9F4" Width="25" Height="25" VerticalAlignment="Center"/>
                        <TextBlock Margin="50,0,0,0" DockPanel.Dock="Top">
                        <Run Text="{Binding ContactMsgGetter.Bio}" FontSize="14"></Run></TextBlock>
                        <TextBlock Margin="52,0,0,0" DockPanel.Dock="Top"> <Run Text="Bio" FontSize="12" Foreground="#FF727272" ></Run>
                        </TextBlock>
                    </DockPanel>
                    <!--Email-->
                    <DockPanel Margin="10,10,0,10" DockPanel.Dock="Top">
                        <materialDesign:PackIcon Kind="Email" ToolTip="Information" DockPanel.Dock="Left" Foreground="#FF03A9F4" Width="25" Height="25" VerticalAlignment="Center"/>
                        <TextBlock Margin="50,0,0,0" DockPanel.Dock="Top">
                        <Run Text="{Binding ContactMsgGetter.Email}" FontSize="14"></Run></TextBlock>
                        <TextBlock Margin="50,0,0,0" DockPanel.Dock="Top"> <Run Text="Email" FontSize="12" Foreground="#FF727272" ></Run>
                        </TextBlock>
                    </DockPanel>
                    <!--Username-->
                    <DockPanel Margin="10,10" DockPanel.Dock="Top">
                        <materialDesign:PackIcon Kind="User" ToolTip="Information" DockPanel.Dock="Left" Foreground="#FF03A9F4" Width="25" Height="25" VerticalAlignment="Center"/>
                        <TextBlock Margin="50,0,0,0" DockPanel.Dock="Top">
                        <Run Text="{Binding ContactMsgGetter.Login}" FontSize="14"></Run></TextBlock>
                        <TextBlock Margin="50,0,0,0" DockPanel.Dock="Top"> <Run Text="Username" FontSize="12" Foreground="#FF727272" ></Run>
                        </TextBlock>
                    </DockPanel>
                    <Separator Margin="0,10" DockPanel.Dock="Top"></Separator>
                    <!--Notification-->
                    <DockPanel Margin="10,5" DockPanel.Dock="Top">
                        <materialDesign:PackIcon Kind="Notifications" ToolTip="Information" DockPanel.Dock="Left" Foreground="#FF03A9F4" Width="25" Height="25"/>
                        <ToggleButton DockPanel.Dock="Right" Style="{StaticResource MaterialDesignSwitchToggleButton}" ToolTip="MaterialDesignSwitchToggleButton" IsChecked="True" />
                        <TextBlock Margin="50,5,0,5" DockPanel.Dock="Right">
                        <Run Text="Notifications" FontSize="14"></Run></TextBlock>
                    </DockPanel>
                    <!--Just a border-->
                    <Border DockPanel.Dock="Top" Height="10" Margin="0,10" Background="#C8E4F8"></Border>
                    <!---->
                    <DockPanel Margin="10,0" MinHeight="34"  Height="20" DockPanel.Dock="Top">
                        <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" Foreground="#FF03A9F4"></materialDesign:PackIcon>
                        <Button Name="buttonDeleteUser"  Style="{StaticResource MaterialDesignFlatButton}" HorizontalContentAlignment="Left"  FontWeight="Normal" Foreground="Black" Height="Auto" Margin="0,-10,0,0" Width="167" Click="buttonDeleteUser_Click">
                            <Label FontWeight="Normal" Margin="30,0,0,0" Foreground="Black">Delete user</Label>
                        </Button>
                    </DockPanel>
                    
                </DockPanel>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
